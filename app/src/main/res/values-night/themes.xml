<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.HolidayReminders" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App -->
        <item name="colorPrimaryDark">@color/black_brown</item>
        <item name="android:windowBackground">@color/black_brown</item>
        <item name="android:navigationBarColor">@color/navigation_bar_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="divider">@color/black_brown</item>

        <!-- Navigation Bar -->
        <item name="indicatorColor">@color/black_brown</item>
        <item name="iconTint">@color/smoke_white</item>
        <item name="iconTintActive">@color/smoke_white</item>
        <item name="textColor">@color/smoke_white</item>

        <!-- Font -->
        <item name="fontFamily">@font/jetbrains_mono_bold</item>
    </style>

    <style name="Base.Theme.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">15dp</item>
        <item name="android:backgroundTint">@color/smoke_white</item>
        <item name="android:drawableTint">@color/black_brown</item>
        <item name="android:textColor">@color/black_brown</item>
    </style>

    <style name="Base.Theme.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/smoke_white</item>
    </style>
</resources>